@page
@model RegisterModel

<link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
<h1>@ViewData["Title"]</h1>

<div class="page-container">
    <div id="kutu" class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 login-section">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="row">
                        <h2 class="text-center">Create a new account.</h2>
                        <div class="col-md-6">
                            <div class="form-floating segment">
                                <input asp-for="Input.FirstName" class="form-control bg-transparent border-0 border-bottom btn-outline-danger" autocomplete="firstname" aria-required="true" />
                                <label asp-for="Input.FirstName"></label>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating segment">
                                <input asp-for="Input.LastName" class="form-control bg-transparent border-0 border-bottom btn-outline-danger" autocomplete="lastname" aria-required="true" />
                                <label asp-for="Input.LastName"></label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                        <div class="form-floating segment justify-content-center">
                                <input asp-for="Input.Email" class="form-control bg-transparent border-0 border-bottom btn-outline-danger" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="col-md-6">
                        <div class="form-floating segment justify-content-center">
                                <input asp-for="Input.Password" class="form-control bg-transparent border-0 border-bottom btn-outline-danger" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="col-md-6">
                        <div class="form-floating segment justify-content-center">
                                <input asp-for="Input.ConfirmPassword" class="form-control bg-transparent border-0 border-bottom btn-outline-danger" autocomplete="new-password" aria-required="true" />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="col-md-6">
                        <div class="form-floating segment justify-content-center">
                                <input asp-for="Input.Address" class="form-control bg-transparent border-0 border-bottom btn-outline-danger" autocomplete="Address" aria-required="true" />
                            <label asp-for="Input.Address"></label>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        </div>
                        <div class="d-flex justify-content-center mt-4">
                            <!-- Butonu da ortalamak için 'justify-content-center' sınıfını ekleyin -->
                            <button id="registerSubmit" type="submit" class="red btn bg-danger rounded-pill">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>








