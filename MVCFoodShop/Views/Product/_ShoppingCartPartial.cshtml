@model ProductCards_VM

<div class="cart-hover">
    <div class="select-items">
        <table>
            <tbody>
                @foreach (ShoppingCartElement shoppingCartElement in Model.ShoppingCart.ShoppingCartElements)
                {
                <tr>
                    <td class="si-pic"><img src="img/select-product-1.jpg" alt=""></td>
                    <td class="si-text">
                        <div class="product-selected">
                            <p>$@shoppingCartElement.ShoppingCartElementPrice x @shoppingCartElement.ShoppingCartElementAmount</p>
                            <h6></h6>
                        </div>
                    </td>
                    <td class="si-close">
                        <i class="ti-close"></i>
                    </td>
                </tr>                 
                }
            </tbody>
        </table>
    </div>
    <div class="select-total">
        <span>total:</span>
        <h5>$@Model.ShoppingCart.ShoppingCartPrice</h5>
    </div>
    <div class="select-button">
        <a href="#" class="primary-btn view-card">VIEW CARD</a>
        <a href="#" class="primary-btn view-card">CHECK OUT</a>
    </div>
</div>