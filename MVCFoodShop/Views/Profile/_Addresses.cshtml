@model AppUser
<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="container mb-4 pt-2">
    <div class="row">
        <div class="col-lg-4 pb-5">
            <!-- Account Sidebar-->
            <div class="author-card pb-3">
                <div class="author-card-cover" style="background-image: url(https://i.hizliresim.com/j7rda16.jpg)"><a class="btn btn-style-1 btn-white btn-sm" href="#" data-toggle="tooltip" title="" data-original-title="You currently have 290 Reward points to spend"><i class="bi bi-star-fill"></i></a></div>
                <div class="author-card-profile">
                    <div class="author-card-avatar">
                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Daniel Adams">
                    </div>
                    <div class="author-card-details">
                        <h5 class="author-card-name text-lg">@Model.FirstName @Model.LastName</h5><span class="author-card-position">@Model.CreationDate.ToShortDateString()</span>
                    </div>
                </div>
            </div>
            <div class="wizard">
                <nav class="list-group list-group-flush">
                    <a class="list-group-item" onclick="MyProfileFunc()">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-heart mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Order List</div>
                            </div><span class="badge badge-secondary">3</span>
                        </div>
                    </a>
                    <a class="list-group-item btn btn-light" onclick="ProfileSettingsFunc()">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-shopping-bag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Profile Settings</div>
                            </div><span class="badge badge-secondary">6</span>
                        </div>
                    </a>
                    <a class="list-group-item" onclick="ChangePasswordFunc()">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-tag mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Change Password</div>
                            </div><span class="badge badge-secondary">4</span>
                        </div>
                    </a>
                    <a class="list-group-item" onclick="AddressesFunc()">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fe-icon-heart mr-1 text-muted"></i>
                                <div class="d-inline-block font-weight-medium text-uppercase">Addresses</div>
                            </div><span class="badge badge-secondary">3</span>
                        </div>
                    </a>

                </nav>
            </div>
        </div>
        <!-- Wishlist-->
        <div class="col-lg-8 pb-5 ">
            <div><h4 class="text-center">Address</h4></div>
            <!-- Öğe -->
            <div class="cart-item d-md-flex justify-content-between">
                <div class="px-3">
                    <a class="cart-item-product" href="#">
                        <div class="cart-item-product-thumb text-center align-items-center pt-2"><i class="fa-solid fa-location-dot justify-content-center"></i></div>
                        <div class="cart-item-product-info d-flex justify-content-between">
                            <!-- Buraya "d-flex justify-content-start" ekledik -->
                            
                            <h4 class="cart-item-product-title pe-5">Ev Adresi</h4>
                            <div class="text-success font-weight-medium pe-5 mt-2 "><input id="address" type="text" value="@Model.Address" style="width:500px" /></div>
                            <div class="ml-auto ">
                                <!-- Buradaki "ml-auto" sınıfını kaldırdık -->
                                <button class="btn btn-warning mb-3" onclick="AddressEditUpdate(@Model.Id)">Edit</button>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>