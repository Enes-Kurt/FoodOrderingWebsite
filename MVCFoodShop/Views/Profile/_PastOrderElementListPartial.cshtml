@model List<ShoppingCartElement>

@foreach (ShoppingCartElement shoppingCartElement in Model)
{
    if (shoppingCartElement.Product != null)
    {
        <!-- Item-->
        <div class="cart-item d-md-flex justify-content-between">
            <span class="remove-item"><i class="fa fa-times"></i></span>
            <div class="px-3 my-3">
                <a class="cart-item-product" href="#">
                    <div class="cart-item-product-thumb"><img src="~/ProductImages/@shoppingCartElement.Product.ProductCoverImage" alt="@shoppingCartElement.Product.ProductName"></div>
                    <div class="cart-item-product-info">
                        <h4 class="cart-item-product-title">@shoppingCartElement.Product.ProductName x @shoppingCartElement.ShoppingCartElementAmount</h4>
                        @{
                            decimal netProductPrice = shoppingCartElement.Product.ProductPrice * shoppingCartElement.ShoppingCartElementAmount;
                        }
                        <div class="text-lg text-body font-weight-medium pb-1">$@netProductPrice</div><span>Order Date: <span class="text-success font-weight-medium">@shoppingCartElement.Product.CreationDate.ToShortDateString()</span></span>
                    </div>
                </a>
            </div>
        </div>

    }
    else
    {
        <div class="cart-item d-md-flex justify-content-between">
            <span class="remove-item"><i class="fa fa-times"></i></span>
            <div class="px-3 my-3">
                <a class="cart-item-product" href="#">
                    <div class="cart-item-product-thumb"><img src="~/MenuImages/@shoppingCartElement.MenuCart.Menu.MenuCoverImage" alt="@shoppingCartElement.MenuCart.Menu.MenuName"></div>
                    <div class="cart-item-product-info">
                        <h4 class="cart-item-product-title">@shoppingCartElement.MenuCart.Menu.MenuName (@shoppingCartElement.MenuCart.MenuType.ToString()) x @shoppingCartElement.ShoppingCartElementAmount</h4>
                        @{
                            decimal netMenuPrice = (shoppingCartElement.MenuCart.Menu.MenuPrice + (decimal)shoppingCartElement.MenuCart.MenuType) * shoppingCartElement.ShoppingCartElementAmount;
                        }
                        <div class="text-lg text-body font-weight-medium pb-1">$@netMenuPrice</div><span>Order Date: <span class="text-success font-weight-medium">@shoppingCartElement.MenuCart.Menu.CreationDate.ToShortDateString()</span></span>
                    </div>
                </a>
            </div>
        </div>
    }
}